    position: relative;

    @media screen and (max-width: 450px) {
      padding: 0 20px;
    }
  }

  #hero > nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 90.96px;
  }

  #hero > nav ul {
    display: flex;
    align-items: center;
    gap: 40px;
    list-style-type: none;

    @media screen and (max-width: 450px) {
      display: none;
    }
  }

  #hero > nav ul li a {
    text-decoration: none;
    color: white;
    font-size: 14px;
    line-height: 16.4px;
  }

  #hero > nav ul li a.cta {
    padding: 12px 20px;
    border: 1px solid #ffffff;
    border-radius: 100px;
    font-weight: 500;
    display: block;
    line-height: 14.35px;
  }

  .leading-area {
    margin-top: 100.04px;
