    z-index: 10;
  }

  .leading-area > h3 > span.pre-text {
    position: relative;
    z-index: 19;
  }

  .leading-area > h3 > span.underline > span.text {
    z-index: inherit;
  }

  .leading-area > h3 > span.underline > img {
    position: absolute;
    bottom: 2px;
    left: -25px;
    z-index: -1;
  }

  .leading-area > p {
    font-size: 24px;
    line-height: 36px;
    font-weight: 300;
    color: #ffffff;
    margin-top: 16px;
    margin-bottom: 0px;
  }

  .leading-area .cta {
    width: fit-content;
    display: block;
    padding: 18px 32px;
    background-color: var(--secondary-color);
    color: var(--primary-color-1);
    border: none;
    margin-top: 73px;
    border-radius: 100px;
    font-size: 24px;
    line-height: 28.58px;
    font-family: Epilogue;
    font-feature-settings:
      "clig" off,
      "liga" off;
    font-family: Typo Grotesk;
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-decoration: none;
     @media screen and (max-width: 450px) {
      font-size: 16px;
    }
  }

  #hero .oval-right {
    top: 162px;
    right: 0;
    position: absolute;

    @media screen and (max-width: 450px) {
      display: none;
    }
  }

  #hero .oval-bottom {
    left: 176px;
    bottom: 0;
    position: absolute;

    @media screen and (max-width: 450px) {
      display: none;
    }
