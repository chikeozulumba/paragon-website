---
import { Image } from "astro:assets";
import TestimonialImage from "../../assets/images/testimonials/02.svg";
import { TESTIMONIALS_DATA } from "../../data/testimonials";

const { class: className } = Astro.props;
const data = TESTIMONIALS_DATA
---

<section
  id="home-testimonial-section"
  class={className ||
    "flex md:flex-row flex-col gap-20 md:gap-10 text-[#123257] items-center justify-center py-[150px] px-[20px] md:py-[263px] md:pl-[199px] md:pr-[197.5px]"}
>
  {data.map((testimonial) => <div
    class="mx-auto w-fit max-w-[1020px] flex items-center justify-center flex-col text-center"
  >
    <div class="flex justify-center items-center w-fit">
      <Image class={"mx-auto"} src={TestimonialImage} alt={""} />
    </div>
    {testimonial.title && <h3 class="text-[28px] md:text-[32px] font-[600] mt-[50px] text-[#123257]">
      {testimonial.title}
    </h3>}
    {testimonial.content && <p class="text-[#123257] mt-[24px] max-w-[520px] text-[16px] md:text-[20px] font-light">
      {testimonial.content}
    </p>}

    {(testimonial.author || testimonial.org) && <div class="mt-[64px]">
      <h5 class="text-[18px] md:text-[24px] font-[600]">{testimonial.org}</h5>
      <p class="text-[18px] md:text-[20px] font-[300]">{testimonial.author}</p>
    </div>}
  </div>)}
</section>
