---
import { Image } from "astro:assets";
const { class: className, item } = Astro.props;
---

<section class={className || "founder-section"}>
  <div class="bg-[#fff] mx-auto flex flex-col md:flex-row md:min-h-[586px]">
    <div
      class="lg:w-[388px] relative bg-white lg:bg-[#transparent]/90 md:pb-[64px] md:px-[64px] py-[20px] px-[20px] flex flex-col md:items-start font-body md:justify-center"
    >
      {
        item.image && (
          <Image
            class="object-contain rounded-sm overflow-hidden lg:w-[260px] lg:h-[324px]"
            src={item.image}
            alt={item.name + " - Paragon consulting"}
          />
        )
      }
    </div>
    <div
      class="content flex-1 lg:px-[78.5px] flex flex-col justify-center gap-[26px] bg-[#F0B884]/10 px-[20px] pt-[50px] pb-[100px] lg:py-[100px]"
    >
      <h5 class="lg:text-[48px] text-[24px] font-[600]">{item.name}</h5>
      <p
        class="lg:max-w-[850px] lg:text-[24px] text-[20px] font-[300] lg:font-[400] mt-[20px] lg:mt-0"
      > 
        {item.description}
      </p>
      {
        item.linkedIn && (
          <>
            <div class="my-2 h-[1px] bg-gray-200 w-2/3" />
            <a
              href={item.linkedIn}
              target="_blank"
              class="block font-[500] lg:text-[24px]"
            >
              <img
                class="h-[20px]"
                src="data:image/png;base64,"
              />
            </a>
          </>
        )
      }
    </div>
  </div>
</section>

<style></style>
