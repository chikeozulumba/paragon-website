---
import { Image } from "astro:assets";
import AsturImage from "../../assets/images/brands/astur.jpg";
import ChartaImage from "../../assets/images/brands/charta.png";
import IroImage from "../../assets/images/brands/iro.png";
import MetaImage from "../../assets/images/brands/meta.svg";
import NinthGridImage from "../../assets/images/brands/ninthgrid.svg";
import PortoImage from "../../assets/images/brands/porto.tiff";
import RebootImage from "../../assets/images/brands/reboot.jpg";
import SpringboardImage from "../../assets/images/brands/springboard.jpg";

const {} = Astro.props;

const BRANDS = [
    { title: 'Astur', image: AsturImage, class: 'md:h-[100px] h-[40px] w-fit' },
    { title: 'Meta', image: MetaImage },
    { title: 'Iro', image: IroImage },
    { title: 'Springboard', image: SpringboardImage },
    { title: 'NinthGrid', image: NinthGridImage },
    { title: 'Charta', image: ChartaImage },
    { title: 'Reboot', image: RebootImage },
    { title: 'Porto', image: PortoImage },
]

---

<section id="brands-section" class="md:py-[100px] py-[50px] flex flex-col gap-[48px]">
  <h1 class="uppercase lg:text-[24px] mx-auto font-body text-[#484848]">Trusted by great companies</h1>
  <div class="lg:max-w-[1248px] mx-auto flex flex-row flex-wrap items-center sm:justify-center justify-center md:gap-[120px] gap-[20px]">
    {BRANDS.map((brand) =>  <Image aria-label={brand.title} class={brand.class || "md:h-[48px] h-[25px] w-fit"} src={brand.image} alt={brand.title + ' | Brands - Paragon Consulting'} />)}
  </div>
</section>
