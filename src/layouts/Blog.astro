---
import { DEFAULT_PAGE_TITLE } from "../constants/site";
import ParityBanner from "../components/ParityBanner.astro";
import BlogHero from "../components/hero/Blog.astro";

interface Props {
  title?: string;
  page?: string;
  post: any;
}

const { title = DEFAULT_PAGE_TITLE, page = "Blog", post,  } = Astro.props;

let purchasingParity = null;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={post.frontmatter?.description} />

    <meta property="og:site_name" content="Paragon Consulting - Blog">
    <meta property="og:title" content={title} />
    <meta property="og:description" content={post.frontmatter?.description} />
    <meta property="og:image" itemprop="image" content="/favicon.png">
    <meta property="og:type" content="website" />

    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="shortcut icon" type="image" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/fonts.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-88P9Q3WEM1"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-88P9Q3WEM1");
    </script>
  </head>
  <body>
    {
      purchasingParity && purchasingParity?.countryCodeIsoAlpha2 && (
        <ParityBanner page={page} purchasingParity={purchasingParity} />
      )
    }
    <BlogHero post={post} />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --primary-color: #4130ba;
    --primary-color-1: #2d1ca8;
    --secondary-color: #e68832;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    padding: 0px;
    margin: 0px;
    box-sizing: border-box;
    background: #ffffff;
  }

  .blog-content p {
    color: #123257;
    font-weight: 300;
  }

  .blog-content > p:not(:first-child) {
    margin-top: 30px;
  }

  .blog-content > h1:not(:first-child) {
    margin-top: 30px;
  }

  .blog-content > h2:not(:first-child) {
    margin-top: 30px;
  }

  .blog-content > h3:not(:first-child) {
    margin-top: 30px;
  }

  .blog-content > h4:not(:first-child) {
    margin-top: 30px;
  }

  .blog-content p:has(img) {
    margin-bottom: 50px;
  }

  .blog-content > h2 {
    font-size: 24px;
    font-weight: 600;
    color: #123257;
  }

  .blog-content > h3 {
    font-size: 20px;
    font-weight: 500;
    color: #123257;
  }

  .blog-content > h4 {
    font-size: 18px;
    font-weight: 500;
    color: #123257;
  }

  .blog-content a {
    text-decoration: underline;
    color: blue;
  }

  .blog-content img {
    margin: 0 auto;
  }

  .blog-content img ~ a {
    margin-top: 10px;
    text-decoration: none !important;
    display: block;
    font-weight: 400;
    text-align: center;
    font-size: 12px;
  }
</style>
