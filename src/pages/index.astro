---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/pages/home/About.astro";
import Services from "../components/pages/home/Services.astro";
import Testimonial from "../components/pages/Testimonial.astro";
import Newsletter from "../components/pages/Newsletter.astro";
import Footer from "../components/pages/Footer.astro";
import Founder from "../components/pages/Founder.astro";
import Brands from "../components/pages/Brands.astro";
import { HERO_BOTTOM_CAPTION, HERO_BOTTOM_TEXT, HERO_CTA, HERO_TOP_CAPTION } from "../data/home";
---

<Layout title="Welcome to Paragon Consulting" page="home">
  <Hero
    captions={{
      top: HERO_TOP_CAPTION,
      bottom: HERO_BOTTOM_CAPTION,
      description: HERO_BOTTOM_TEXT,
    }}

    cta={{
      title: HERO_CTA.title,
      url: HERO_CTA.url
    }}
  />
  <About />
  <Services />
  <Founder />
  <Brands />
  <Testimonial />
  <Newsletter />
  <Footer />
</Layout>
